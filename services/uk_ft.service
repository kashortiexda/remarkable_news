[Unit]
Description=Financial Times

[Service]
ExecStart=/home/root/bin/renews.arm \
    -output /usr/share/remarkable/suspended.png \
    -verbose \
    -cooldown 3600 \
    -url https://www.frontpages.com/financial-times \
    -xpath '//img[@id="giornale-img"]/@src' \
